cmake_minimum_required(VERSION 3.5)
project(Sistemi_Complessi)
set(CMAKE_CXX_STANDARD 14)
set(GTEST_ROOT ../lib/gtest)
include_directories(../lib/gtest/include ../lib/gtest)
link_directories(${GTEST_ROOT})
find_package(GTest COMPONENTS GTest)
add_executable(testScimmia testScimmia.cpp)
add_executable(testParete testParete.cpp)
target_link_libraries(testScimmia gtest gtest_main Scimmia)
target_link_libraries(testParete gtest gtest_main Parete)
add_executable(testEvol testEvol.cpp)
target_link_libraries(testEvol gtest gtest_main Scimmia)
enable_testing()
add_test(testAll testScimmia testParete)
